<%- include("./portials/head") -%>

<div class="text-center center-div" id="login">
  <div class="container w-25 border py-5">
    <div class="title">
      <h2 style="color: white" class="font-weight-bold">Login Seystem</h2>
      <span style="color: white" id="span">login for the existing user</span>
    </div>
    <form action="/route/login" method="POST" class="pt-3">
      <div class="form-group">
        <input
          type="email"
          class="form-control"
          placeholder="Email"
          name="email"
        />
        <small style="color: white" class="form-text text-left"
          >Register Email Address</small
        >
      </div>
      <div class="form-group">
        <input
          type="password"
          class="form-control"
          placeholder="Password"
          name="password"
        />
      </div>
      <button
        style="margin-top: 10px"
        type="submit"
        class="btn btn-primary rounded-pill"
      >
        Submit
      </button>
    </form>
  </div>
</div>

<%- include('./portials/footer') -%>
